<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".thong_tin_ca_nhan">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <ImageButton
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="50dp">
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:layout_marginTop="15dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="Cá nhân"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <View
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="125dp"
                    android:layout_height="1dp"
                    android:background="#2B2B2B"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="135dp"
                    android:layout_height="135dp">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:src="@drawable/image"
                        android:textColor="#434343"/>
                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="90dp"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="120dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/logo1"
                            android:textColor="#434343"
                            android:textSize="20dp" />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <View
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="125dp"
                    android:layout_height="1dp"
                    android:background="#2B2B2B"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ tên"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:textColor="#434343"/>
        <TextView
            android:id="@+id/txtsdt"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textColor="#D85F9F"
            android:text="Họ và Tên"
            android:background="@drawable/boder"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới Tính"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:textColor="#434343"/>

        <TextView
            android:id="@+id/txtmatkhau"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textColor="#D85F9F"
            android:background="@drawable/boder"
            android:text="Giới Tính"/>
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:textColor="#434343"/>
        <TextView
            android:id="@+id/txtnhapmatkhaulai"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textColor="#D85F9F"
            android:background="@drawable/boder"
            android:text="23/09/2002"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ"
            android:textSize="20dp"
            android:layout_marginLeft="80dp"
            android:textColor="#434343"/>
        <TextView
            android:id="@+id/txtnhapmatkhaula"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textColor="#D85F9F"
            android:background="@drawable/boder"
            android:text="đà nẵng"/>

        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="điện thoại"
            android:textSize="20dp"

            android:layout_marginLeft="80dp"
            android:textColor="#434343"/>
        <TextView
            android:id="@+id/txtnhapmatkhau"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textSize="18dp"
            android:textColor="#D85F9F"
            android:background="@drawable/boder"
            android:text="09000000000"/>
    </LinearLayout>

</LinearLayout>