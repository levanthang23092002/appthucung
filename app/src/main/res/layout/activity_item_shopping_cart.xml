<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:weightSum="6"
    android:background="#403C3C"
    >
    <LinearLayout
        android:paddingTop="10dp"
        android:layout_weight="0.5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@color/white"
        >
        <CheckBox
            android:id="@+id/ckbGioHang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/purple_500"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/the"
        android:paddingTop="10dp"
        android:layout_weight="5.5"
        android:layout_width="0dp"
        android:background="@color/white"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/imgGioHang"
            android:background="@color/white"
            android:layout_weight="1.75"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/danhgia_image1"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="3.75"
            android:paddingStart="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
            <TextView
                android:id="@+id/textviewTensp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Áo sweatshirt"
                android:textSize="23dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Phân loại: "
                    android:textColor="#423D3D"/>
                <TextView
                    android:id="@+id/textviewsize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="XL"
                    android:textColor="#423D3D"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text="Số lượng: "
                    android:textColor="#423D3D"/>
                <TextView
                    android:id="@+id/textviewsoluong"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18dp"
                    android:textColor="#423D3D"
                    />
            </LinearLayout>

            <View
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#ACA9A9"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Tổng tiền: "
                    android:textStyle="bold"
                    android:textSize="23dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:id="@+id/textviewtongtien"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="đ 300.000"
                    android:textSize="23dp"
                    android:textStyle="bold"
                    android:textColor="#FF9800"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>